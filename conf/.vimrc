" tab settings
set expandtab
set smarttab
set tabstop=2
set softtabstop=2
set shiftwidth=2

" show line numbers
set number

set foldcolumn=1
syntax on

" no sound
set noerrorbells
set novisualbell

" find
set ignorecase
set smartcase
set hlsearch

" encoding
set encoding=utf8

filetype indent plugin on
set ruler

syntax on
:highlight Comment ctermfg=green

